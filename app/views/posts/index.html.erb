<title>Forums</title>
<h2>Forums</h2>
<%= link_to "Add a new post", new_post_path, :class=>"btn btn-primary"%>
<table class="container">
  <% @posts.each do |post|%>
    <tr>
      <td><%= post.topic %></td>
    </tr>
    <tr>
      <td> <%= post.content %></td>
    </tr>
    <tr>
      <td> posted by <%= User.where(id: post.user_id).pluck(:name).join %></td>
      <td>( <%= post.created_at %>)</td>
    </tr>
  <% end %>
</table>
