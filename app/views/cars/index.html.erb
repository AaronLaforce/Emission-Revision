<head>
 <meta name="turbolinks-visit-control" content="reload">
</head>
<title>My Cars</title>
<table class="container">
  <thead>
    <tr>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Trim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <% if car.user_id = current_user.id %>
            <td><%= car.year %></td>
            <td><%= car.make %></td>
            <td><%= car.model %></td>
            <td><%= car.trim %></td>
            <td><%= link_to "Add a New Fuel Log", '/new_fuel_log/' + car.id.to_s, class: "btn btn-primary"  %></td>
        <% end%>    
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td><a class="btn btn-primary mini-spacer" href="/new_car" target="_self">Add a New Car!</a></td>
    </tr>
  </tbody>
</table>
