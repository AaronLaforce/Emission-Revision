<head>
 <meta name="turbolinks-visit-control" content="reload">
</head>
<title>My Cars</title>
<table class="container">
  <% count = 0%>
  <tbody>
    <% @cars.each do |car| %>
      <% if count == 0%>
        <tr>
          <th>Year</th>
          <th>Make</th>
          <th>Model</th>
          <th>Name</th>
          <th colspan="2"></th>
        </tr>
      <% end %>
      <tr>
          <td><%= car.year %></td>
          <td><%= car.make %></td>
          <td><%= car.model %></td>
          <td><%= car.car_name %></td>
          <td><%= link_to "Add a New Fuel Log", '/new_fuel_log/' + car.id.to_s, class: "btn btn-primary"  %></td>
      </tr>
      <% count +=1%>
    <% end %>
    <% if count == 0%>
      <tr>
        <td><h3> You have no saved cars. Please click on the button to add a new car!</h3></td>
        <td><a class="btn btn-lg btn-primary mini-spacer" href="/new_car" target="_self">Add a New Car!</a></td>
        <td><!-- spacers do not delete --></td>
        <td><!-- spacers do not delete --></td>
        <td><!-- spacers do not delete --></td>
      </tr>
    <% else %>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><a class="btn btn-primary mini-spacer" href="/new_car" target="_self">Add a New Car!</a></td>
      </tr>
    <%end%>
  </tbody>
</table>
